<Window x:Class="ChessUI.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Profile"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="556"
        Height="890"
        Background="#111111">

    <Border CornerRadius="25"
            BorderBrush="#3A7BFF"
            BorderThickness="4"
            Margin="20">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <StackPanel HorizontalAlignment="Center">

                    <!-- HEADER -->
                    <TextBlock Text="🎮 PLAYER PROFILE"
                               FontSize="34"
                               FontWeight="Bold"
                               Foreground="#3A7BFF"
                               Margin="0,10,0,25"
                               HorizontalAlignment="Center"/>

                    <!-- AVATAR (hình tròn) -->
                    <Grid Margin="0,0,0,10" Width="180" Height="180">

                        <!-- Vòng ngoài -->
                        <Ellipse Stroke="#3A7BFF"
                                 StrokeThickness="5"
                                 Width="180" Height="180"
                                 Fill="#111111"/>

                        <!-- Ảnh avatar dạng ImageBrush -->
                        <Ellipse Width="170" Height="170">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="AvatarBrush" Stretch="Fill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Chữ cái khi chưa có avatar -->
                        <TextBlock x:Name="lblAvatarLetter"
                                   FontSize="78"
                                   FontWeight="Bold"
                                   Foreground="#3A7BFF"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- NÚT ĐỔI AVATAR -->
                    <Button Content="Đổi Avatar"
                            Width="170"
                            Height="45"
                            FontSize="20"
                            Background="#4da3ff"
                            Foreground="White"
                            Margin="0,0,0,20"
                            Cursor="Hand"
                            Click="ChangeAvatar_Click"/>

                    <!-- TITLE -->
                    <TextBlock x:Name="lblTitle"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#4da3ff"
                               Margin="0,5,0,20"
                               HorizontalAlignment="Center"/>

                    <!-- In-Game Name -->
                    <Border Background="#222222"
                            Padding="22"
                            CornerRadius="12"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Tên In-Game"
                                       Foreground="#AAAAAA"
                                       FontSize="14"/>
                            <TextBlock x:Name="lblIngameName"
                                       FontSize="26"
                                       Foreground="#4da3ff"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- RANK -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Rank hiện tại" Foreground="#AAAAAA"/>
                            <TextBlock x:Name="lblRank"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#4da3ff"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Rank cao nhất" Foreground="#AAAAAA"/>
                            <TextBlock x:Name="lblHighestRank"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <!-- Wins / Losses -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Wins" Foreground="#AAAAAA"/>
                            <TextBlock x:Name="lblWins"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#00ff44"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Losses" Foreground="#AAAAAA"/>
                            <TextBlock x:Name="lblLosses"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#ff4444"/>
                        </StackPanel>
                    </Grid>

                    <!-- Play Time / Win Rate -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Thời gian chơi" Foreground="#AAAAAA"/>
                            <TextBlock x:Name="lblTotalTime"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#4da3ff"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Tỉ lệ thắng" Foreground="#AAAAAA"/>
                            <TextBlock x:Name="lblWinRate"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#4dff6e"/>
                        </StackPanel>
                    </Grid>

                    <!-- Close Button -->
                    <Button Content="Đóng"
                            Width="170"
                            Height="55"
                            FontSize="22"
                            Background="#3A7BFF"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Close_Click"
                            Margin="0,10,0,20"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>
