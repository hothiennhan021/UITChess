<Window x:Class="ChessUI.SelectAvatarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn Avatar"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="520"
        Height="600"
        Background="#111111">

    <Border CornerRadius="15" BorderBrush="#4da3ff" BorderThickness="3" Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <TextBlock Text="Avatar Có Sẵn"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#4da3ff"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <UniformGrid Columns="3" Margin="10" HorizontalAlignment="Center">

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_1.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_2.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_3.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_4.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_5.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_6.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_7.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_8.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                    <Image Source="pack://application:,,,/ChessUI;component/Assets/Avatars/chess_avatar_9.png"
                           Width="120" Height="120" Margin="8"
                           MouseLeftButtonUp="Avatar_Click"/>

                </UniformGrid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
