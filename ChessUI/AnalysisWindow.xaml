<Window x:Class="ChessUI.AnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="Phân Tích Trận Đấu" Height="700" Width="1000"
        Background="#202020"
        Closing="AnalysisWindow_Closing">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0" Stretch="Uniform" Margin="0,0,10,0">
            <Grid Width="600" Height="600">
                <Grid x:Name="BoardGrid" />

                <UniformGrid x:Name="BoardSquareGrid" Rows="8" Columns="8" />

                <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8" />

                <Canvas x:Name="ArrowCanvas" IsHitTestVisible="False" Width="600" Height="600"/>
            </Grid>
        </Viewbox>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Thống Kê Ván Đấu" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Trắng" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Xuất sắc: " Foreground="Cyan"/>
                            <TextBlock x:Name="wBrilliant" Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tốt nhất: " Foreground="Green"/>
                            <TextBlock x:Name="wBest" Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Sai lầm: " Foreground="Orange"/>
                            <TextBlock x:Name="wMistake" Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Đi sót: " Foreground="Red"/>
                            <TextBlock x:Name="wBlunder" Text="0" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Đen" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Xuất sắc: " Foreground="Cyan"/>
                            <TextBlock x:Name="bBrilliant" Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tốt nhất: " Foreground="Green"/>
                            <TextBlock x:Name="bBest" Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Sai lầm: " Foreground="Orange"/>
                            <TextBlock x:Name="bMistake" Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Đi sót: " Foreground="Red"/>
                            <TextBlock x:Name="bBlunder" Text="0" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <ListView x:Name="lstMoves" Grid.Row="1" Background="#303030" BorderThickness="0" SelectionChanged="lstMoves_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding TurnNumber}" Foreground="Gray" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Vertical" MouseLeftButtonDown="WhiteMove_Clicked" Background="Transparent">
                                <TextBlock Text="{Binding WhiteMove}" Foreground="White" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding WhiteEval}" Foreground="{Binding WhiteColor}" FontSize="10"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Vertical" MouseLeftButtonDown="BlackMove_Clicked" Background="Transparent">
                                <TextBlock Text="{Binding BlackMove}" Foreground="White" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding BlackEval}" Foreground="{Binding BlackColor}" FontSize="10"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnPrev" Content="&lt; Trước" Width="80" Height="30" Margin="5" Click="btnPrev_Click"/>
                <Button x:Name="btnNext" Content="Tiếp &gt;" Width="80" Height="30" Margin="5" Click="btnNext_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>