<Window x:Class="ChessUI.AnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="Phân Tích Trận Đấu" Height="700" Width="1000"
        Background="#202020"
        Closing="AnalysisWindow_Closing">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0" Margin="0,0,10,0">
            <Grid x:Name="BoardGrid" Width="600" Height="600">
                <Grid.Background>
                    <SolidColorBrush Color="#202020"/>
                </Grid.Background>

                <UniformGrid x:Name="BoardSquareGrid" Rows="8" Columns="8"/>

                <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8"/>
                <Canvas x:Name="ArrowCanvas" Width="600" Height="600" IsHitTestVisible="False"/>
            </Grid>
        </Viewbox>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#252525" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Thống Kê Ván Đấu" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Trắng" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Đen" Foreground="White" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Text="Xuất sắc" Foreground="#1AB5B8" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wBrilliant" Grid.Row="1" Grid.Column="1" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="bBrilliant" Grid.Row="1" Grid.Column="3" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Text="Tốt nhất" Foreground="#6BC235" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wBest" Grid.Row="2" Grid.Column="1" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="bBest" Grid.Row="2" Grid.Column="3" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="3" Text="Sai lầm" Foreground="#FFA333" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wMistake" Grid.Row="3" Grid.Column="1" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="bMistake" Grid.Row="3" Grid.Column="3" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="4" Text="Đi sót" Foreground="#FA412D" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wBlunder" Grid.Row="4" Grid.Column="1" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="bBlunder" Grid.Row="4" Grid.Column="3" Text="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="#252525" CornerRadius="5" Margin="0,0,0,10">
                <ListView x:Name="lstMoves" Background="Transparent" Foreground="White" 
                          SelectionMode="Single" 
                          SelectionChanged="lstMoves_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="#" DisplayMemberBinding="{Binding TurnNumber}" Width="30"/>

                            <GridViewColumn Header="White" Width="140">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Cursor="Hand" MouseLeftButtonUp="WhiteMove_Clicked">
                                            <TextBlock Text="{Binding WhiteMove}" FontWeight="Bold" Width="40" Foreground="White" VerticalAlignment="Center"/>
                                            <Image Source="{Binding WhiteIcon}" Width="16" Height="16" Margin="5,0"/>
                                            <TextBlock Text="{Binding WhiteEval}" Foreground="{Binding WhiteColor}" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Black" Width="140">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Cursor="Hand" MouseLeftButtonUp="BlackMove_Clicked">
                                            <TextBlock Text="{Binding BlackMove}" FontWeight="Bold" Width="40" Foreground="White" VerticalAlignment="Center"/>
                                            <Image Source="{Binding BlackIcon}" Width="16" Height="16" Margin="5,0"/>
                                            <TextBlock Text="{Binding BlackEval}" Foreground="{Binding BlackColor}" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnPrev" Content="&lt; Trước" Width="80" Height="30" Margin="5" Click="btnPrev_Click"/>
                <Button x:Name="btnNext" Content="Tiếp &gt;" Width="80" Height="30" Margin="5" Click="btnNext_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>