<Window x:Class="ChessUI.ChangeIngameNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Tên Hiển Thị"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="420"
        Height="250"
        Background="#111111"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="15" BorderBrush="#3A7BFF" BorderThickness="3" Margin="10" Background="#1a1a1a">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <StackPanel Margin="20" VerticalAlignment="Center">

            <TextBlock Text="NHẬP TÊN HIỂN THỊ MỚI"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#4da3ff"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBox x:Name="txtIngame"
                     FontSize="16"
                     Padding="10"
                     Background="#222222"
                     Foreground="White"
                     BorderBrush="#555"
                     BorderThickness="1"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Center"
                     Margin="0,0,0,25">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Hủy"
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#444"
                        Foreground="White"
                        Cursor="Hand"
                        Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2"
                        Content="Xác Nhận"
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#3A7BFF"
                        Foreground="White"
                        Cursor="Hand"
                        Click="Confirm_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </StackPanel>
    </Border>
</Window>